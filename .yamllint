extends: default
ignore: |
  secrets.yaml
  **/secrets/*.yaml
rules:
  line-length:
    max: 120
    allow-non-breakable-words: true
    level: warning
  indentation:
    spaces: 2
    indent-sequences: true
  comments:
    min-spaces-from-content: 1
  document-start: disable
  truthy:
    allowed-values: ['true', 'false']
