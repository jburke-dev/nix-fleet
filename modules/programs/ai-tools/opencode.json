{
  "$schema": "https://opencode.ai/config.json",
  "model": "opencode/qwen3-coder",
  "theme": "system",
  "provider": {
    "ollama-rocm": {
      "npm": "ollama-aik-provider-v2",
      "name": "Ollama ROCm Local",
      "options": {
        "baseURL": "https://ollama.apps.chesurah.net"
      },
      "models": {
        "qwen3-coder:latest": {
          "name": "qwen3-coder"
        },
        "qwen3-small:latest": {
          "name": "qwen3-small"
        }
      }
    }
  },
  "formatter": {
    "markdown-lint": {
      "command": [
        "markdownlint",
        "-f",
        "$FILE"
      ],
      "extensions": [
        ".md"
      ]
    }
  },
  "permission": {
    "webfetch": "ask",
    "edit": "ask",
    "bash": "ask"
  },
  "agent": {
    "plan": {
      "temperature": 0.1
    },
    "build": {
      "temperature": 0.3
    },
    "brainstorm": {
      "temperature": 0.7,
      "prompt": "{file:./prompts/brainstorm.txt}",
      "tools": {
        "write": false,
        "webfetch": true
      },
      "permission": {
        "edit": "deny"
      }
    }
  }
}
