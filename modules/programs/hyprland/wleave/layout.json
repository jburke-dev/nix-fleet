{
    "buttons-per-row": "2/2",
    "buttons": [
        {
            "label": "lock",
            "action": "hyprlock",
            "text": "Lock",
            "keybind": "l"
        },
        {
            "label": "logout",
            "action": "loginctl terminate-user $USER",
            "text": "Logout",
            "keybind": "e"
        },
        {
            "label": "reboot",
            "action": "systemctl reboot",
            "text": "Reboot",
            "keybind": "r"
        },
        {
            "label": "shutdown",
            "action": "systemctl poweroff",
            "text": "Shutdown",
            "keybind": "s"
        }
    ],
    "close-on-lost-focus": true,
    "show-keybinds": true
}
